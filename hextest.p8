pico-8 cartridge // http://www.pico-8.com
version 33
__lua__
function _init()
	center={x=64,y=64}
	r=10
end

function get_corner(c,s,i)
	local a=1/6*i
	return {x=c.x+s*cos(a),y=c.y+s*sin(a)}
end

function _update()
	cls()
	local pts={}
	for i=1,6 do
		pts[i]=get_corner(center,r,i)
	end
	for i=1,#pts do
		if i==#pts then
			line(pts[i].x,pts[i].y,pts[1].x,pts[1].y,7)
		else
			line(pts[i].x,pts[i].y,pts[i+1].x,pts[i+1].y,7)
		end
	end
end
